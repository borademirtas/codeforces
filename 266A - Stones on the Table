#include <iostream>
#include <vector>
#include <cstdio>
#include <algorithm>  
#include <fstream>
#include <string>
using namespace std;
#define ll long long 



int main()
{
	ll n, m = 0;
	string s;
	cin >> n >> s;
	for (ll i = 0; i < n - 1; i++) {
		s[i] == s[i + 1] ? m++ : m += 0;
	}
	cout << m;
}
